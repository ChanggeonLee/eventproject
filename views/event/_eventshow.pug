.content
  lable(for='img')
  if (event.img)
    #img_slide.carousel.slide(data-ride='carousel')
      ol.carousel-indicators.slide_num
        -for (var i = 0 ; i < event.img.length ; i++)
          li(data-target='#img_slide', data-slide-to=i)

      .carousel-inner
        .carousel-item.active
          img.d-block.w-100(src=event.img[0], alt='img_slide')
        -for (var i = 1; i < event.img.length; i++) 
          .carousel-item
            img.d-block.w-100(src=event.img[i] , alt='Third slide')
      
      a.carousel-control-prev(href='#img_slide', role='button', data-slide='prev')
        span.carousel-control-prev-icon(aria-hidden='true')
        span.sr-only Previous
      a.carousel-control-next(href='#img_slide', role='button', data-slide='next')
        span.carousel-control-next-icon(aria-hidden='true')
        span.sr-only Next
.content
  #map(style='width:100%;height:350px;')
    p
      em 마커에 마우스 커서를 올려주세요!
    script(type='text/javascript', src='//dapi.kakao.com/v2/maps/sdk.js?appkey=6044a29c276ca4c9187d521d0a734448&libraries=services')
    script.
      var mapContainer = document.getElementById('map'), // 지도를 표시할 div
                mapOption = {
                    center: new daum.maps.LatLng(33.450701, 126.570667), // 지도의 중심좌표
                    level: 2 // 지도의 확대 레벨
                };
                // 지도를 생성합니다
                var map = new daum.maps.Map(mapContainer, mapOption);
                // 주소-좌표 변환 객체를 생성합니다
                var geocoder = new daum.maps.services.Geocoder();
                // 주소로 좌표를 검색합니다
                geocoder.addressSearch(`#{event.locate}`, function(result, status) {
                    // 정상적으로 검색이 완료됐으면
                    if (status === daum.maps.services.Status.OK) {
                        var coords = new daum.maps.LatLng(result[0].y, result[0].x);
                        // 결과값으로 받은 위치를 마커로 표시합니다
                        var marker = new daum.maps.Marker({
                            map: map,
                            position: coords
                        });
                        // 인포윈도우로 장소에 대한 설명을 표시합니다
                        var infowindow = new daum.maps.InfoWindow({
                            content: '<div style="width:150px;text-align:center;padding:6px 0;">' + `#{event.title}`+ '</div>'
                        });
                        infowindow.open(map, marker);
                        // 지도의 중심을 결과값으로 받은 위치로 이동시킵니다
                        map.setCenter(coords);
                    }
                });
