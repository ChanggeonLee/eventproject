extends ../layout

block content
  .container
    h1.main-title= user.name
          
    dl.row
      dt.col-sm-3 Email
      dd.col-sm-9
        a(href=`mailto:${user.email}`)= user.email

      dt.col-sm-3 Created At
      dd.col-sm-9= user.createdAt
      
      if user.facebook.id
        dt.col-sm-3 Facebook
        dd.col-sm-9
          img.img-fluid.rounded-circle(src= user.facebook.photo)

      if user.kakao.id
        dt.col-sm-3 Kakao
        dd.col-sm-9
          img.img-fluid.rounded-circle.kakaoimg(src= user.kakao.photo)      
          
    hr
    p
      a.btn.btn-outline-primary(href=`/users/setting/${currentUser._id}`) Edit
      | 
      a.btn.btn-outline-danger.need-confirm-btn(href=`/users/${user._id}?_method=DELETE`) Delete
